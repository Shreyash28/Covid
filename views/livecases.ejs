<%- include("header") -%>

    <body id="livecases">
        <div class="navigation">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand heading" href="/"><span style="color:red">Covid-19</span></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
<span class="navbar-toggler-icon"></span>
</button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link active" href="/tracker">Tracker</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        <section>
            <h1>Total Cases in India </h1>

            <div class="container">
                <div class="row">
                    <div class="col-2">

                    </div>
                    <div class="col-2" id="tconfirm">
                        <h3>Total Cases</h3>
                        <p style="padding-left: 4.5rem;">
                            <%= Confirmed %>
                        </p>
                    </div>
                    <div class="col-2" id="tactive">
                        <h3>Active</h3>
                        <p style="padding-left: 4.5rem;">
                            <%= Active %>
                        </p>
                    </div>
                    <div class="col-2" id="tdecease">
                        <h3>Deceased</h3>
                        <p style="padding-left: 4.5rem;">
                            <%= Deceased %>
                        </p>
                    </div>
                    <div class="col-2" id="trecovered">
                        <h3>Recovered</h3>
                        <p style="padding-left: 4.5rem;">
                            <%= Recovered %>
                        </p>
                    </div>
                    <div class="col-2">

                    </div>
                </div>

            </div>

        </section>

        <section>
            <h2>State Wise</h2>
            <div class="container">
                <div class="row">
                    <div class="col-1">

                    </div>
                    <div class="col-2">
                        <h1>States</h1>
                    </div>
                    <div class="col-2">
                        <h1>Total Cases</h1>
                    </div>
                    <div class="col-2">
                        <h1>Active</h1>
                    </div>
                    <div class="col-2">
                        <h1>Deceased</h1>
                    </div>
                    <div class="col-2">
                        <h1>Recovered</h1>
                    </div>
                    <div class="col-1">

                    </div>
                </div>

            </div>
            <% for(var i=0;i<State.length-1;i++){ %>
                <div class="container">
                    <div class="row">
                        <div class="col-1">

                        </div>
                        <div class="col-2">
                            <p>
                                <%= State[i] %>
                            </p>
                        </div>
                        <div class="col-2">
                            <p>
                                <%= Confirm1[i] %>
                            </p>
                        </div>
                        <div class="col-2">
                            <p>
                                <%= Active1[i] %>
                            </p>
                        </div>
                        <div class="col-2">
                            <p>
                                <%= Death1[i] %>
                            </p>
                        </div>
                        <div class="col-2">
                            <p>
                                <%= Recovered1[i] %>
                            </p>
                        </div>
                        <div class="col-1">

                        </div>
                    </div>

                </div>



                <%  } %>






        </section>



    </body>







    <%- include("footer") -%>